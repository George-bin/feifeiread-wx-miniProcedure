/* pages/my/my.wxss */
page {
  height: 100vh;
  background: white
}

.login-section {
  padding-top: 20px;
  text-align: center;
}

.login-section .login-btn {
  width: 140px;
  height: 34px;
  line-height: 34px;
  margin-top: 20px;
  border: 0;
  font-size: 14px;
  letter-spacing: 2px;
  color: white;
  background: #4bb8c5;
  border-radius: 20px;
}

.login-section input {
  display: inline-block;
  width: 240px;
  height: 38px;
  padding: 0 10px;
  border: 1px solid #dfdfdf;
  font-size: 14px;
  text-align: left;
  border-radius: 6px;
}

.login-section input:focus {
  border: 1px solid #4bb8c5;
}

.login-section input + input {
  margin-top: 10px;
}

/* 用户信息 */
.user-info-section {
  padding: 10px 20px;
  text-align: center;
}

.user-info-section .avatar {
  display: inline-block;
  padding: 6px;
  background: white;
  border-radius: 50%;
  box-shadow: 0 0 10px gray;
}

.user-info-section .avatar image {
  width: 70px;
  height: 70px;
  background: white;
  border-radius: 50%;
  vertical-align: bottom;
}

.user-info-section .username {
  font-size: 16px;
}

.user-info-section .logon-btn {
  width: 140px;
  height: 34px;
  line-height: 34px;
  margin-top: 20px;
  border: 0;
  font-size: 14px;
  letter-spacing: 2px;
  color: white;
  background: #4bb8c5;
  border-radius: 20px;
}