.section-content-container {
  height: 100vh;
  background: #F2F2F2
}

.section-content-container .content-section-scroll-view {
  height: calc(100vh - 30px);
}

.section-content-container .content-section {
  padding: 10px 15px 30px;
  font-size: 15px;
}

.section-content-container .footer-section {
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  width: calc(100% - 30px);
  height: 30px;
  padding: 0 15px;
  line-height: 30px;
  font-size: 12px;
  color: #333333;
}

.section-content-container .footer-section text {
  flex: 1;
}

.section-content-container .footer-section .next-section-btn {
  flex: 2;
  text-align: center;
  font-size: 16px;
  color: #b6481c;
}

.section-content-container .footer-section .book-name {
  text-align: right;
}

/* 设置 */
.set-up-section {
  position: fixed;
  bottom: 0;
  left: 0;  
  width: 100%;
  color: white;
  background: black;
  transition: 0.3s all;
}

.set-up-section .luminance-set {
  padding: 5px 10px;
}

.set-up-section .bottom-set {
  width: 100%;
  display: flex;
  align-items: center;
  height: 60px;
}

.section-set {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 40px;
  padding: 0 20px;
  font-size: 14px;
  color: #b6481c;
}

.bottom-set .bottom-set-item {
  flex: 1;
  text-align: center;
}

.bottom-set .bottom-set-item text {
  display: block;
}

.bottom-set .bottom-set-item .des {
  margin-top: 4px;
  font-size: 10px;
}

.bottom-set .bottom-set-item .iconfont {
  font-size: 22px;
}

/* 目录 */
.catalog-section {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  transition: 0.3s all;
  background: none;
  /* z-index: 9990; */
}

.catalog-section scroll-view {
  width: 70%;
  height: 100vh;
  background: black;
}

.catalog-section scroll-view view {
  height: 34px;
  line-height: 34px;
  padding: 0 20px;
  font-size: 15px;
  color: white;
}
.catalog-section scroll-view .more-data {
  /* text-align: center; */
  color: rgba(182, 72, 28, 0.5);
}